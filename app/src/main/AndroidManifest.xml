<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zj.web">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CCWebKit"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:replace="android:fullBackupContent">

        <activity
            android:name="com.zj.web.act.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".act.RemoteActivity"
            android:launchMode="singleTask"
            android:process=":web.test"
            android:screenOrientation="portrait"
            android:exported="true"
            android:windowSoftInputMode="adjustResize|stateUnspecified">
            <intent-filter>
                <action android:name="com.zj.web.act.RemoteActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="com.zj.multiProgress.nimbus.web.RemoteService"
            android:process=":web.test"
            tools:replace="android:process" />

    </application>

</manifest>
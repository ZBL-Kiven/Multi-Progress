<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="265dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ssl_error_alert_pop_bg"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/web_ssl_alert_iv_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/icon_ssl_alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/web_ssl_alert_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/ssl_error_hint"
        android:textColor="#333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/web_ssl_alert_iv_icon" />

    <TextView
        android:id="@+id/web_ssl_alert_tv_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="@string/ssl_proceed"
        android:textColor="#333"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/web_ssl_alert_tv_cancel"
        app:layout_constraintTop_toBottomOf="@id/web_ssl_alert_tv_title" />

    <TextView
        android:id="@+id/web_ssl_alert_tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/ssl_cancel"
        android:textColor="#333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/web_ssl_alert_tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>